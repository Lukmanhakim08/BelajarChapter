<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Serializable.PertamaActivity"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <Button
        android:id="@+id/btnserializable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="serializable"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btnparcilable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parcelable"
        android:layout_gravity="center"/>


    <Button
        android:id="@+id/btnlatihanserializable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latihan serializable"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btnlatihanparcelable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latihan Parcelable"
        android:layout_gravity="center"/>

</LinearLayout>