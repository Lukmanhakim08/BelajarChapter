<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".keempat.HalamansatuActivity"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input Nilai Mahasiswa"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edtnis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="masukkan uts"/>

    <EditText
        android:id="@+id/edtuas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="masukkan uas"/>


    <EditText
        android:id="@+id/edttugas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="masukkan Tugas"/>

    <EditText
        android:id="@+id/edtnamamhs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="masukkan Mahasisw"/>

    <Button
        android:layout_gravity="center"
        android:id="@+id/btnprosessatu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proses"/>


    <Button
        android:layout_gravity="center"
        android:id="@+id/btnprosesbundle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bundle"/>

</LinearLayout>