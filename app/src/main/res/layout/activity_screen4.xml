<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MiniChalange.Screen4Activity"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Halaman Screen 3"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtusia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Usia"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edtalamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Alamat"
        android:layout_marginBottom="10dp"/>


    <EditText
        android:id="@+id/edtpekerjaan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Pekerjaan"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btnback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go To Screen3"
        android:layout_gravity="center"/>

</LinearLayout>